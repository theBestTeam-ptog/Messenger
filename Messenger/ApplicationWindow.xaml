<Window x:Class="Messenger.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:Messenger"
        mc:Ignorable="d"
        Title="ApplicationWindow" Height="560" Width="820" MinWidth="500px" MinHeight="280">
    <Grid ShowGridLines="False">
        <Grid.Resources>
            <DataTemplate x:Key="itemTemplate">
                <materialDesign:Card>
                    <ListBoxItem MouseUp="OpenDialog" Height="50px">
                        <TextBlock Text="{Binding UserName}"></TextBlock>
                    </ListBoxItem>
                </materialDesign:Card>
            </DataTemplate>
        </Grid.Resources>    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270px"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Левая часть -->
        <DockPanel Grid.Column="0">
            <!-- Шапка -->
            <Grid DockPanel.Dock="Top" Height="50px">
                <TextBox x:Name="Searcher"
                         TextWrapping="Wrap"
                         Width="225"
                         Height="30"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Center"
                         Margin="5 0 0 0"
                         TextChanged="Search"
                         Background="Azure"
                         Foreground="Black"
                         FontSize="17"
                         FontWeight="Regular"
                />
                <materialDesign:PackIcon 
                    Kind="Search"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 7 0"
                />
            </Grid>
            <!-- Body Список диалогов -->
            <ListBox Name="list"
                     Style="{DynamicResource MaterialDesignCardsListBox}" 
                     ItemTemplate="{Binding Source={StaticResource itemTemplate}}"
                     ItemsSource="{Binding Users}"
            />
        </DockPanel>
        <!-- Правая часть -->
        <Frame Grid.Column="1" x:Name="dialogFrame" x:FieldModifier="public" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
